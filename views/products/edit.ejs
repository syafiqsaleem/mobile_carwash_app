<%- include('../partials/head') %>

<div class="container">
  <form method="POST" action="/products/<%= product.slug %>?_method=PATCH">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="<%= product.name %>"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input
        type="text"
        class="form-control"
        id="price"
        name="price"
        value="<%= product.price %>"
      />
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        value="<%= product.image %>"
      />
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
  </form>
</div>

<%- include('../partials/foot') %>
